{
  "name": "personal-blog",
  "version": "1.0.0",
  "description": "Full-stack personal blog with admin panel",
  "main": "backend/server.js",
  "scripts": {
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install",
    "install-admin": "cd admin && npm install",
    "build-frontend": "cd frontend && npm run build",
    "build-admin": "cd admin && npm run build",
    "build": "npm run install-backend && npm run install-frontend && npm run install-admin && npm run build-frontend && npm run build-admin",
    "start": "cd backend && npm start",
    "dev-backend": "cd backend && npm run dev",
    "dev-frontend": "cd frontend && npm start",
    "dev-admin": "cd admin && npm start"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
